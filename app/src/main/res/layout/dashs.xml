<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context=".Dashs">

    <ScrollView
        android:id="@+id/fmstations"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sub_player">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carouselView"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="3dp"
                    app:slideInterval="3000"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="FM Radio India"
                    android:textColor="#fff"
                    android:textSize="25dp" />

            </RelativeLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/favoriteslayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/favoritesheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="My Favorites"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/favoritesall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="View All"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/favorites"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hindiheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Hindi FM Stations"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hindiviewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="View All"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/hindi"
                android:layout_width="fill_parent"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/malayalamheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Malayalam FM Stations"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/malayalamviewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="View All"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/malayalam"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/hindi" />

            <LinearLayout
                android:id="@+id/adlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fl_adplaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tamilheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Tamil FM Stations"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tamilviewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="View All"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/tamil"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/malayalam" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bollywoodheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Norway FM Stations"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bollywoodviewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="View All"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/bollywood"
                android:layout_width="fill_parent"
                android:layout_height="150dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/teluguheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Telugu FM Stations"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/teluguviewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="View All"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/telugu"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/hindi" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/punjabiheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Punjabi FM Stations"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/punjabiviewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="View All"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/punjabi"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/malayalam" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/englishheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="English FM Stations"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/englishviewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="View All"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/english"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/malayalam" />



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kannadaheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Kannada FM Stations"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/kannadaviewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="View All"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/kannada"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/malayalam" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/sub_player"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/subplayerimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="4dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/subplayername"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:gravity="center|start"
            android:text="Radio station"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/playTrigger"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@null"
            app:srcCompat="@drawable/ic_play_arrow_black" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ad_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>